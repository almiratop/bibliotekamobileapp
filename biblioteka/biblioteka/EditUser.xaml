<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="biblioteka.EditUser"          
             Title="Информация о пользователе">
    <StackLayout>
        <Entry x:Name="nameEntry" Text="{Binding Path=Name}"  />
        <Entry x:Name="dateEntry" Text="{Binding Path=Date}"  />
        <Entry x:Name="roleEntry" Text="{Binding Path=Role}"  />
        <Entry x:Name="loginEntry" Text="{Binding Path=Login}"  />
        <Entry x:Name="passwordEntry" Text="{Binding Path=Password}"  />
        <Button Text="Сохранить" Clicked="SaveUser"  Margin="10" TextColor="White" BackgroundColor="Black"/>
        <Button Text="Удалить" Clicked="SaveUser"  Margin="10" TextColor="White" BackgroundColor="Black"/>
    </StackLayout>
</ContentPage>