<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="biblioteka.EditUser"          
             Title="Информация о пользователе">
    <StackLayout>
        <Entry x:Name="nameEntry" Text="{Binding Path=Name}" Placeholder="Имя" />
        <Entry x:Name="dateEntry" Text="{Binding Path=Date}" Placeholder="Любая информация" />
        <Entry x:Name="roleEntry" Text="{Binding Path=Role}" Placeholder="Клиент/Библиотекарь" />
        <Entry x:Name="loginEntry" Text="{Binding Path=Login}" Placeholder="Логин" />
        <Entry x:Name="passwordEntry" Text="{Binding Path=Password}" Placeholder="Пароль" />
        <Button Text="Сохранить" Clicked="SaveUser"  Margin="10" TextColor="White" BackgroundColor="Black"/>
        <Button Text="Удалить" Clicked="DeleteUser"  Margin="10" TextColor="White" BackgroundColor="Black"/>
    </StackLayout>
</ContentPage>